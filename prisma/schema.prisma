generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum LEVEL {
  N5
  N4
  N3
  N2
  N1
}

enum TYPE {
  word
  kanji
  grammar
}

model Chapter {
  id        Int        @id @default(autoincrement())
  name      String
  level     LEVEL
  type      TYPE
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  wordCards WordCard[]
}

model WordCard {
  id        Int      @id @default(autoincrement())
  word      String
  reading   String
  chapter   Chapter  @relation(fields: [chapterId], references: [id])
  chapterId Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
